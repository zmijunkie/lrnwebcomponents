{
  "name": "lrnwebcomponents",
  "description": "ELMSLN produced web components for any project",
  "wcfactory": {
    "askSASS": true,
    "askProps": true,
    "askHAX": true,
    "monorepo": "lrnwebcomponents",
    "orgNpm": "@lrnwebcomponents",
    "orgGit": "elmsln",
    "gitRepo": "https://github.com/elmsln/lrnwebcomponents.git",
    "sass": {
      "name": "rh-sass",
      "pkg": "@rhelements/rh-sass",
      "path": "rh-sass/rh-sass"
    }
  },
  "author": {
    "name": "elmsln",
    "url": "https://www.elmsln.org/"
  },
  "license": "Apache-2.0",
  "repository": "git@github.com/elmsln/lrnwebcomponents.git",
  "scripts": {
    "prepare": "husky install",
    "start": "bash scripts/preinstall.sh && yarn run storybook",
    "lerna": "lerna",
    "hax": "code . && code elements/hax-body/lib/hax-store.js && cd elements/haxcms-elements && yarn start",
    "preinstall": "bash scripts/preinstall.sh",
    "postinstall": "bash scripts/postinstall.sh && ./node_modules/.bin/patch-package",
    "init": "lerna init",
    "format": "run-s format:*",
    "format:js": "prettier --write **/*.{js,json}",
    "format:css": "stylelint --fix **/*.css",
    "format:scss": "stylelint --syntax=scss --fix **/*.scss",
    "test": "lerna run test --concurrency=1 --no-bail",
    "build": "lerna run build --no-bail",
    "publish": "echo 'NOTICE: You must run `lerna publish` manually'",
    "test-suite-inject": "node scripts/test-suite-inject.js",
    "storybook": "npx --max_old_space_size=16384 start-storybook --node-resolve --watch --open",
    "build-storybook": "bash scripts/preinstall.sh && npx --max_old_space_size=16384 build-storybook && bash scripts/postinstall.sh",
    "rebuild-wcfcache": "./node_modules/.bin/gulp",
    "new": "yarn run rebuild-wcfcache && wcf element && yarn run test-suite-inject && yarn install --link-duplicates"
  },
  "devDependencies": {
    "patch-package": "6.4.7",
    "validate-element-name": "3.0.0",
    "@babel/core": "^7.9.0",
    "@babel/plugin-proposal-class-properties": "7.16.7",
    "@emotion/core": "0.13.1",
    "@emotion/styled": "0.10.6",
    "@open-wc/building-utils": "2.18.4",
    "@open-wc/demoing-storybook": "2.4.7",
    "@open-wc/storybook": "0.2.8",
    "@open-wc/testing": "3.0.4",
    "@open-wc/webpack-import-meta-loader": "0.4.7",
    "@rollup/plugin-commonjs": "21.0.1",
    "@rollup/plugin-node-resolve": "13.1.3",
    "@web/dev-server": "0.1.30",
    "@webcomponents/webcomponentsjs": "2.6.0",
    "babel-loader": "8.2.3",
    "babel-plugin-external-helpers": "6.22.0",
    "babel-plugin-transform-custom-element-classes": "0.1.0",
    "babel-plugin-transform-dynamic-imports-to-static-imports": "1.0.0",
    "babel-plugin-transform-es2015-modules-umd": "6.24.1",
    "babel-preset-env": "1.7.0",
    "body-parser": "1.19.2",
    "browser-sync": "2.27.7",
    "chalk": "5.0.0",
    "core-js": "3.21.1",
    "css-scss": "0.1.1",
    "decomment": "0.9.5",
    "del": "6.0.0",
    "dialog-polyfill": "0.5.6",
    "file-loader": "6.2.0",
    "global": "4.4.0",
    "gulp": "4.0.2",
    "gulp-babel": "8.0.0",
    "gulp-clean-css": "4.3.0",
    "gulp-concat-util": "0.5.5",
    "gulp-copy": "4.0.1",
    "gulp-minify-html-literals": "1.1.22",
    "gulp-rename": "2.0.0",
    "gulp-replace": "1.1.3",
    "gulp-sass": "5.1.0",
    "gulp-sequence": "1.0.0",
    "gulp-shell": "0.8.0",
    "gulp-strip-css-comments": "2.0.0",
    "gulp-svg-sprite": "1.5.0",
    "gulp-terser": "2.1.0",
    "gulp-trim": "1.0.2",
    "helmet": "5.0.2",
    "husky": "7.0.4",
    "imagemin-lint-staged": "0.4.0",
    "inquirer-recursive": "0.0.7",
    "jest": "27.5.1",
    "lerna": "4.0.0",
    "lint-staged": "12.3.4",
    "lodash": "^4.17.21",
    "lodash.clonedeep": "4.5.0",
    "lorem-ipsum": "^2.0.3",
    "node-sass": "7.0.1",
    "npm-run-all": "^4.1.5",
    "polymer-build": "3.1.4",
    "polymer-cli": "1.9.11",
    "polymer-webpack-loader": "2.0.3",
    "prettier": "2.5.1",
    "raw-loader": "4.0.2",
    "react": "*",
    "react-dom": "*",
    "regenerator-runtime": "^0.13.5",
    "requirejs": "2.3.6",
    "rollup": "2.68.0",
    "rollup-plugin-auto-external": "^2.0.0",
    "rollup-plugin-babel": "4.4.0",
    "rollup-plugin-delete": "2.0.0",
    "rollup-plugin-rewrite-imports": "2.0.0",
    "rollup-plugin-terser": "7.0.2",
    "strip-css-comments": "3.0.0",
    "stylelint": "14.5.2",
    "symlink-dir": "5.0.1",
    "trim": "1.0.1",
    "wct-browser-legacy": "1.0.2",
    "web-component-analyzer": "1.1.6",
    "web-component-tester": "6.9.2",
    "webpack": "5.69.1",
    "webpack-node-externals": "3.0.0",
    "whatwg-fetch": "3.6.2",
    "yo": "4.3.0",
    "@wcfactory/rollup-umd-build": "^0.13.0"
  },
  "peerDependencies": {
    "@web/test-runner": "0.13.27",
    "@web/test-runner-commands": "0.6.1",
    "@web/test-runner-playwright": "0.8.8",
    "puppeteer": "13.4.0"
  },
  "dependencies": {
    "@open-wc/storybook-prebuilt": "1.2.0",
    "fetch-ie8": "1.5.0",
    "lunr": "2.3.9",
    "concurrently": "7.0.0",
    "promise-polyfill": "8.2.1",
    "rollup-plugin-cpy": "^2.0.1",
    "lit": "^2.2.0"
  },
  "resolutions": {
    "chokidar": "^3.0.0",
    "lit-element": "3.2.0",
    "lit-html": "2.2.0"
  },
  "lint-staged": {
    "*.{js,json}": "prettier --write",
    "*.{png,jpeg,jpg,gif,svg}": "imagemin-lint-staged",
    "*.css": "stylelint --fix",
    "*.scss": "stylelint --syntax=scss --fix"
  },
  "keywords": [
    "yeoman-generator",
    "custom-elements",
    "web-components",
    "webcomponents",
    "polymer",
    "lit-element",
    "skate-js",
    "slim-js",
    "twig",
    "lit-html",
    "vanillajs"
  ],
  "private": true,
  "npmClient": "yarn",
  "useWorkspaces": true,
  "workspaces": {
    "packages": [
      "elements/*"
    ],
    "nohoist": []
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn run test-suite-inject > /dev/null && lint-staged"
    }
  }
}
